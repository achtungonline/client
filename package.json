      "name": "Erik Odenman",
      "email": "erik.odenman@gmail.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/achtungonline/client/issues"
  },
  "homepage": "https://github.com/achtungonline/client",
  "scripts": {
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run watch:test'",
    "test": "npm run lint -s",
    "lint": "eslint src/**",
    "clean": "rimraf build",
    "prebuild": "rimraf build && mkdirp build",
    "build": "npm run build:css -s && npm run build:js -s",
    "build:js": "browserify -t [ babelify --presets [ es2015 react ] ] --outfile build/index.js -d src/js/index.js",
    "build:css": "node-sass src/css/main.scss build/index.css",
    "watch:js": "npm run build:js -s && watchify -t [ babelify --presets [ es2015 react ] ] --outfile build/index.js -d src/js/index.js",
    "watch:css": "nodemon -q -w src/css/ --ext '.scss' --exec 'npm run build:css'",
    "watch:test": "nodemon -q -w src --ext '.js' --exec 'npm run test'"
  },
  "dependencies": {
    "core": "achtungonline/core",
    "normalize.css": "^4.1.1",
    "paper": "^0.9.25",
    "react": "^0.14.6",
    "react-dom": "^0.14.6"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^2.11.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.2",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  }
}
