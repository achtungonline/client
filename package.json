{
  "name": "client",
  "version": "0.1.1",
  "description": "The web client of the game.",
  "repository": {
    "type": "git",
    "url": "https://github.com/achtungonline/client.git"
  },
  "author": [
    {
      "name": "Lucas Wiener",
      "email": "lucas@wiener.se"
    },
    {
      "name": "Mathias Lindblom",
      "email": "ommatte@gmail.com"
    },
    {
      "name": "Erik Odenman",
      "email": "erik.odenman@gmail.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/achtungonline/client/issues"
  },
  "homepage": "https://github.com/achtungonline/client",
  "scripts": {
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run watch:test'",
    "test": "npm run test:core && npm run lint",
    "test:core": "jasmine-node node_modules/core/src",
    "lint": "nodemon -q -w src --ext '.js' --exec 'eslint src'",
    "clean": "shx rm -rf public/js && shx rm -rf public/css",
    "prebuild": "npm run clean && shx mkdir -p public/js && shx mkdir -p public/css",
    "build": "npm run build:css && npm run build:js && uglifyjs public/js/index.js -o public/js/index.js",
    "build:js": "browserify src/js/index.js -o public/js/index.js",
    "build:css": "node-sass src/css/main.scss public/css/index.css && shx cp node_modules/normalize.css/normalize.css public/css",
    "watch:js": "npm run build:js && watchify src/js/index.js -o public/js/index.js -d",
    "watch:css": "nodemon -q -w src/css/ --ext '.scss' --exec 'npm run build:css'",
    "watch:test": "nodemon -q -w src --ext '.js' --exec 'npm run test'",
    "server-test": "watchify src/js/server-test.js -o public/js/server-test.js -d",
    "multi": "watchify src/js/multi.js -o public/js/multi.js -d"
  },
  "dependencies": {
    "core": "achtungonline/core",
    "normalize.css": "^4.2.0",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "socket.io-client": "^1.4.8"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "parallelshell": "^2.0.0",
    "shx": "^0.1.4",
    "uglify-js": "^2.6.2",
    "uglifycss": "0.0.21",
    "watchify": "^3.7.0",
    "jasmine-core": "^2.5.2",
    "jasmine-node": "^1.14.5"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
